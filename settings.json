{
  "auto_install_extensions": {
    "svelte": true,
    "astro": true,
    "html": true,
    "wakatime": true
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "git_panel": {
    "dock": "left"
  },
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 0,
      "padding": 7,
      "min_column": 0,
      "show_commit_summary": false
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": false,
      "shift": false,
      "platform": false,
      "function": false
    }
  },
  "buffer_font_features": {
    "calt": 0
  },
  "gutter": {
    "folds": true
  },
  "minimap": {
    "show": "never"
  },
  "terminal": {
    "font_size": 16.0
  },
  "file_types": {
    "properties": [
      "*.env"
    ]
  },
  "tab_size": 2,
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
      }
    }
  },
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic",
        "color": "#474747"
      },
      "comment.doc": {
        "font_style": "italic",
        "color": "#474747"
      },
      "comment.js.doc": {
        "font_style": "italic",
        "color": "#474747"
      },
      "punctuation.comment": {
        "font_style": "italic",
        "color": "#474747"
      },
      "storage.type.class.jsdoc": {
        "font_style": "italic",
        "color": "#474747"
      },
      "entity.name.type.instance.jsdoc": {
        "font_style": "italic",
        "color": "#474747"
      },
      "variable.other.jsdoc": {
        "font_style": "italic",
        "color": "#474747"
      }
    }
  }
}
